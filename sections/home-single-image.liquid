<section class="section-wrapper-{{ section.id }} home-single-image-section np-page-width">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when "image-block" %}
      <div class="image-block-inner block-width-{{ block.id }} ">
        <img
          class="desktop-image"
          src="{{ block.settings.desktop-image | img_url: 'master' }}"
          alt="">
        <img
          class="mobile-image"
          src="{{ block.settings.mobile-image | img_url: 'master' }}"
          alt="">
        <div class="overlay-div">
          <p class="overlay-text">New Season</p>
          <a href="#" class="overlay-link">
            Shop
          </a>
        </div>
      </div>

      {% when 'spacer-block' %}
      <div class="spacer-{{ block.id }}"></div>

    {% endcase %}
  {% endfor %}
</section>

<style>
  .np-page-width {
    max-width: 1440px;
    margin: 0 auto;
  }
  .home-single-image-section.np-page-width {
    padding: 0;
  }


  {% for block in section.blocks %}
    {% case block.type %}
      {% when "image-block" %}
      .section-wrapper-{{ section.id }}.block-width-{{ block.id }}{
        width: 100%;
        height: 100%;
        padding: 0 {{ block.settings.padding}}px;
        position: relative;
      }

      .section-wrapper-{{ section.id }}.block-width-{{ block.id }}.desktop-image {
        width: 100%;
        aspect-ratio: 3 / 2;
      }

      .home-single-image-section {
        animation: fade-in{{ block.settings.delay-time }}s ease 0s forwards;
      }
      .overlay-div {
        position: absolute;
        bottom: 7.6%;
        right: 50%;
      }
      {% if block.settings.change-aspect-ratio %}
        .section-wrapper-{{ section.id }}.block-width-{{ block.id }}.desktop-image {
          width: 100%;
          aspect-ratio: 1400 / 677;
        }
      {% endif %}
      {% if block.settings.mobile-image %}
        .mobile-image {
          display: none;
        }
        .desktop-image {
          display: block;
        }
        @media(max-width:768px) {
          .desktop-image {
            display: none;
          }
          .mobile-image {
            display: block;
          }
        }
      {% else %}
        .mobile-image {
          display: none;
        }
      {% endif %}

      @media(max-width: 1000px) {
        .section-wrapper-{{ section.id }}.block-width-{{ block.id }}{
          padding: 0 20px;
        }
      }

      @media(max-width:768px) {
        .section-wrapper-{{ section.id }}.block-width-{{ block.id }}{
          width: 100%;
          height: 100%;
          padding: 0;
        }
        .section-wrapper-{{ section.id }}.block-width-{{ block.id }}.mobile-image {
          width: 100%;
          aspect-ratio: 360 / 384;
        }
      }

      {% when 'spacer-block' %}
      .section-wrapper-{{ section.id }}.spacer-{{ block.id }}{
        height: {{ block.settings.spacer-height }}
        px;
      }
    {% endcase %}
  {% endfor %}
</style>

{% schema %}
  {
    "name": "Bannar Image",
    "settings": [],
    "blocks": [
      {
        "type": "image-block",
        "name": "Image",
        "settings": [
          {
            "type": "range",
            "id": "padding",
            "label": "Both Side Padding",
            "min": 0,
            "max": 200,
            "step": 2,
            "unit": "px",
            "default": 0
          },
          {
            "type": "image_picker",
            "label": "Desktop Image",
            "id": "desktop-image"
          },
          {
            "type": "image_picker",
            "label": "Mobile Image ",
            "id": "mobile-image"
          },
          {
            "type": "range",
            "id": "delay-time",
            "label": "Image Delay Time",
            "min": 0,
            "max": 10,
            "step": 1,
            "unit": "s",
            "default": 3
          }, {
            "type": "checkbox",
            "label": "Change Aspect Ratio",
            "id": "change-aspect-ratio",
            "default": false
          }
        ]
      }, {
        "type": "spacer-block",
        "name": "Spacer",
        "settings": [
          {
            "type": "range",
            "id": "spacer-height",
            "label": "Spacer Height",
            "min": 0,
            "max": 200,
            "step": 5,
            "unit": "px",
            "default": 30
          }
        ]
      }
    ],
    "presets": [
      {
        "category": "content",
        "name": "Bannar Image Home",
        "blocks": [
          {
            "type": "image-block"
          }, {
            "type": "spacer-block"
          }
        ]
      }
    ]
  }
{% endschema %}