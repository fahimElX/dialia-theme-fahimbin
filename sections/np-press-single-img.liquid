<section class="section-wrapper-{{ section.id }} np-page-width">
  <div class="press-page-wrapper">
    <div class="blog-section-inner">
      <div class="blog-post-wrapper">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'double-image' %}
            <div class="blog">
              <a href="#">
                <div class="blog-img">
                  <img src="{{ block.settings.image-first | img_url: 'master'}}" alt="first image">
                </div>
              </a>
            </div>

            <div class="blog">
              <a href="#">
                <div class="blog-img">
                  <img src="{{ block.settings.image-second | img_url: 'master'}}" alt="second image">
                </div>
              </a>
            </div>
          </div>
        {% endcase %}
      {% endfor %}
      <div class="blog-details-wrapper">
        <p class="blog-author">{{ section.settings.blog-author }}</p>
        <p class="blog-title">{{ section.settings.blog-title }}</p>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Double Image Blog",
    "settings": [
      {
        "type": "text",
        "id": "blog-author",
        "label": "Megazine Name",
        "default": "ex: Vogue, Times"
      },
      {
        "type": "text",
        "id": "blog-title",
        "label": "Blog Title",
        "default": "Lorem Lorem"
      },
      {
        "type": "range",
        "id": "font_size_author",
        "min": 12,
        "max": 60,
        "step": 1,
        "unit": "px",
        "label": "Font size For Author",
        "default": 16
      },
      {
        "type": "range",
        "id": "font_size_title",
        "min": 12,
        "max": 60,
        "step": 1,
        "unit": "px",
        "label": "Font size For Blog Title",
        "default": 16
      }, {
        "type": "color",
        "id": "blog-text-color",
        "label": "Blog text Color",
        "default": "#000000"
      }


    ],
    "blocks": [
      {
        "name": "Double Image",
        "type": "double-image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image-first",
            "label": "Add First Image "
          }, {
            "type": "image_picker",
            "id": "image-second",
            "label": "Add Second Image "
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Double Image Blog"
      }
    ]
  }
{% endschema %}

<style>
  .blog-post-wrapper {
    display: flex;
    gap: 5px;
  }
  .blog-details-wrapper {
    margin-top: 15px;
    display: flex;
    gap: 30px;
  }
  .blog-author {
    font-family: 'Intervogue';
    font-style: normal;
    font-weight: 400;
    font-size: {{ section.settings.font_size_author }}px;
    line-height: 27px;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: {{ section.settings.blog-text-color }};
  }
  .blog-title {
    font-family: 'Silvana';
    font-style: normal;
    font-weight: 400;
    font-size: {{ section.settings.font_size_title }}px;
    line-height: 27px;
    text-align: justify;
    letter-spacing: -0.01em;
    color: {{ section.settings.blog-text-color }};
  }
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'double-image' %}
      .blog {
        flex: 1;
      }
      .blog-img {
        padding: 52px 42px;
        background: rgba(43, 39, 37, 0.1);
      }
    {% endcase %}
  {% endfor %}
</style>