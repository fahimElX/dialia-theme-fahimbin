<!-- Footer Area -->
<footer class="footer">
  <!-- Footer Widgets -->
  <div class="footer-toparea tm-padding-section section-wrapper-{{section.id}}">
    <div class="container">
      <div class="row widgets footer-widgets">
        <div class="col-lg-3 col-md-6 col-12">
          <!-- Single Widget (Widget Contact) -->
          <div class="single-widget widget-contact">
            <h5 class="widget-title">Get In Touch</h5>
            <ul>
              <li>
                <b>Address :</b>2726 Avenue Papineau Montreal, QC, Canada
              </li>
              <li>
                <b>Phone :</b>
                <a href="tel:+18009156270">1-800-915-6270</a>
              </li>
              <li>
                <b>Email :</b>
                <a href="mailto:info@example.com">info@example.com</a>
              </li>
            </ul>
            <ul class="widget-contact-social">
              <li>
                <a href="#">
                  <i class="zmdi zmdi-twitter"></i>
                </a>
              </li>
              <li>
                <a href="#">
                  <i class="zmdi zmdi-facebook"></i>
                </a>
              </li>
              <li>
                <a href="#">
                  <i class="zmdi zmdi-pinterest"></i>
                </a>
              </li>
              <li>
                <a href="#">
                  <i class="zmdi zmdi-linkedin"></i>
                </a>
              </li>
            </ul>
          </div>
          <!--// Single Widget (Widget Contact) -->
        </div>

        <div class="col-lg-3 col-md-6 col-12">
          <!-- Single Widget (Widget Blog) -->
          <div class="single-widget widget-recentpost">
            <h5 class="widget-title">Recent Posts</h5>
            <ul>
              {% for article in section.settings.blog.articles %}
                <li>
                  <a href="blog-details.html" class="widget-recentpost-image">
                    <img src="{{ article.image | image_url }}" />
                  </a>
                  <div class="widget-recentpost-content">
                    <h6>
                      <a href="blog-details.html">{{ article.title }}</a>
                    </h6>
                    <span>August 01, 2019</span>
                  </div>
                </li>
              {% endfor %}
            </ul>
          </div>
          <!--// Single Widget (Widget Blog) -->
        </div>

        <div class="col-lg-3 col-md-6 col-12">
          <!-- Single Wiget (Widget Quicklinks) -->
          <div class="single-widget widget-quicklinks">
            <h5 class="widget-title">Customer services</h5>
            <ul>
              {% for link in section.settings.menu.links %}
                <li>
                  <a href="{{link.url}}">{{ link.title }}</a>
                </li>
              {% endfor %}
            </ul>
          </div>
          <!--// Single Wiget (Widget Quicklinks) -->
        </div>

        <div class="col-lg-3 col-md-6 col-12">
          <!-- Single Widget (Widget Newsletter) -->
          <div class="single-widget widget-newsletter">
            <h5 class="widget-title">Subscribe us</h5>
            <p>
              Get Business news, tip and solutions to your problems from
              our experts.
            </p>
            <form id="tm-mailchimp-form" class="widget-newsletter-form">
              <input
                id="mc-email"
                type="text"
                placeholder="Email address"
                required="required" />
              <button
                id="mc-submit"
                type="submit"
                class="tm-button">
                <i class="zmdi zmdi-mail-send"></i>
              </button>
            </form>
            <!-- Mailchimp Alerts -->
            <div class="tm-mailchimp-alerts">
              <div class="tm-mailchimp-submitting"></div>
              <div class="mailchimp-success"></div>
              <div class="tm-mailchimp-error"></div>
            </div>
            <!--// Mailchimp Alerts -->
            <img src="{{ section.settings.image_of_payment | image_url }}" />
          </div>
          <!--// Single Widget (Widget Newsletter) -->
        </div>
      </div>
    </div>
  </div>
  <!--// Footer Widgets -->

  <!-- Footer -->
  <div class="footer-bottomarea">
    <div class="container">
      <p class="footer-copyright">
        Copyright 2019 by
        <a href="#">thememarch</a>. All rights reserved
      </p>
    </div>
  </div>
  <!--// Footer -->
</footer>
<!--// Footer Area -->

{% schema %}
  {
    "name": "Footer Section",
    "settings": [
      {
        "type": "link_list",
        "id": "menu",
        "label": "Select Menu"
      }, {
        "type": "blog",
        "id": "blog",
        "label": "Blog Type"
      }, {
        "type": "image_picker",
        "id": "image_of_payment",
        "label": "Payment Method Image"
      }
    ],
    "presets": [
      {
        "name": "Footer Section"
      }
    ]
  }
{% endschema %}