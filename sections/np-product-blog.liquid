<section class="section-wrapper-{{ section.id }} np-page-width">
  <div class="block-{{ block.id }}">
    <div class="product-blog-wrapper">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when "product-blog-card" %}
          <div class="product-blog-card">
            <div class="product-img">
              <img src="{{ block.settings.product-image | img_url: 'master'}} " alt="product-img">
            </div>
            <div class="product-info-wrapper">
              <div class="product-info">
                <p class="product-blog-author">
                  {{ block.settings.blog-author }}
                </p>
                <p class="product-blog-title">
                  {{ block.settings.blog-title }}
                </p>
              </div>

              <a class="read-btn" href="{{ block.settings.button-link }}">
                {{ block.settings.button-text }}
              </a>

            </div>
          </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>

</section>



{% schema %}
  {
    "name": "Product Blog",
    "blocks": [
      {
        "name": "Product Blog Card",
        "type": "product-blog-card",
        "settings": [
          {
            "type": "image_picker",
            "id": "product-image",
            "label": "Image of Product"
          },
          {
            "type": "text",
            "id": "blog-author",
            "label": "Blog's Megazine Name",
            "default": "Lorem"
          },
          {
            "type": "text",
            "id": "blog-title",
            "label": "Blog Title",
            "default": "Lorem"
          },
          {
            "type": "url",
            "id": "button-link",
            "label": "Button link"
          }, {
            "type": "text",
            "id": "button-text",
            "label": "Button Text",
            "default": "Lorem"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Product Blog",
        "blocks": [
          {
            "type": "product-blog-card"
          }
        ]
      }
    ]
  }
{% endschema %}

{% style %}
  .np-page-width {
    max-width: 1440px;
    margin: 0 auto;
  }
  p {
    margin-bottom: 0;
  }
  .product-blog-wrapper {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
  }
  .product-blog-card {
    margin-bottom: 65px;
  }
  .product-info-wrapper {
    margin-top: 15px;
    min-height: 175px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  .product-info {
    display: flex;
    gap: 12px;
  }
  .product-blog-author {
    font-family: 'Silvana';
    font-style: normal;
    font-weight: 400;
    font-size: 16px;
    line-height: 27px;
    text-align: justify;
    letter-spacing: -0.01em;
    color: #2B2725;
  }
  .product-blog-title {
    font-family: 'Intervogue';
    font-style: normal;
    font-weight: 400;
    font-size: 18px;
    line-height: 27px;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: #2B2725;
    margin-bottom: 0;
    max-width: 330px;

  }
  .read-btn {
    padding: 12px 70px;
    border: 0.75px solid #2B2725;
    font-family: 'Intervogue';
    font-style: normal;
    font-weight: 400;
    font-size: 12.5px;
    line-height: 21px;
    text-align: center;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: #2B2725;
    max-width: 234px;
  }



  @media(max-width: 768px) {
    .np-page-width {
      padding: 0 12px;
    }
    .product-blog-wrapper {
      flex-direction: column;
      flex-wrap: nowrap;
      gap: 0;
    }
    .product-blog-card {
      margin-bottom: 65px;
      padding: 0 12px;
    }
    .product-img img {
      width: 100%;
    }
    .product-info-wrapper {
      margin-top: 20px;
      min-height: unset;
      width: 100%;
    }
    .product-info {}

    .product-blog-author {
      font-family: 'Silvana';
      font-style: normal;
      font-weight: 400;
      font-size: 16px;
      line-height: 22px;
      text-align: justify;
      letter-spacing: -0.01em;
      font-feature-settings: 'ordn' on;
      color: #2B2725;
    }
    .product-blog-title {
      font-family: 'Intervogue';
      font-style: normal;
      font-weight: 400;
      font-size: 14px;
      line-height: 20px;
      letter-spacing: 0.02em;
      text-transform: uppercase;
      color: #2B2725;
      min-height: unset;
      margin-bottom: 0;
      max-width: 100%;
    }
    .read-btn {
      padding: 12px 70px;
      border: 0.75px solid #2B2725;
      font-family: 'Intervogue';
      font-style: normal;
      font-weight: 400;
      font-size: 12.5px;
      line-height: 21px;
      text-align: center;
      letter-spacing: 0.05em;
      text-transform: uppercase;
      color: #2B2725;
    }



  }
{% endstyle %}