<!-- Team Member Area -->
<div class="tm-section team-member-area tm-padding-section bg-grey section-wrapper-{{section.id}}">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-xl-7 col-lg-8 col-md-10 col-12">
        <div class="tm-section-title text-center">
          <h2>
            {{ section.settings.section-heading }}
          </h2>
          <p>
            {{ section.settings.section-description }}
          </p>
        </div>
      </div>
    </div>
    <div class="row team-slider-activation">
      {% for block in section.blocks %}

        <!-- Single Team Member -->
        <div class="col-lg-3">
          <div class="tm-member">
            <div class="tm-member-top">
              <img src="{{ block.settings.member-img | img_url: 'master'}}">
              <ul>
                <li><a href="#"><i class="zmdi zmdi-facebook"></i></a></li>
                <li><a href="#"><i class="zmdi zmdi-twitter"></i></a></li>
                <li><a href="#"><i class="zmdi zmdi-skype"></i></a></li>
                <li><a href="#"><i class="zmdi zmdi-instagram"></i></a></li>
              </ul>
            </div>
            <div class="tm-member-bottom">
              <h6>{{ block.settings.member-designation }}</h6>
              <h5>{{ block.settings.member-name }}</h5>
            </div>
          </div>
        </div>
        <!--// Single Team Member -->

      {% endfor %}
    </div>
  </div>
</div>
<!--// Team Member Area -->

{% schema %}
  {
    "name": "Specialist Team",
    "settings": [
      {
        "type": "text",
        "id": "section-heading",
        "label": "Section Heading",
        "default": "Heading Here"
      }, {
        "type": "text",
        "id": "section-description",
        "label": "Section Description",
        "default": "Description Here"
      }
    ],
    "blocks": [
      {
        "name": "Team Member",
        "type": "team-member",
        "settings": [
          {
            "type": "image_picker",
            "id": "member-img",
            "label": "Member Image"
          }, {
            "type": "text",
            "id": "member-designation",
            "label": "Member Designation",
            "default": "MBBS, MD"
          }, {
            "type": "text",
            "id": "member-name",
            "label": "Member Name",
            "default": "Dr. XYZ"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Specialist Team",
        "blocks": [
          {
            "type": "team-member"
          }
        ]
      }
    ]
  }
{% endschema %}