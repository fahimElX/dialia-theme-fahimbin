<div class="header">
  <!-- Header Bottom Area -->
  <div class="header-bottomarea">
    <div class="container">
      <div class="header-bottominner">
        <div class="header-logo">
          <a href="index.html">
            <img
              src="{{ section.settings.site-logo | img_url: '105px' }}"
              loading="lazy"
              width="105"
              height="65"
              alt="The Soap Store"
              id="logo">
          </a>
        </div>

        <nav class="tm-navigation"><ul>
                {% for link in linklists.main-menu.links -%}
                  <li class="tm-navigation-dropdown">
                     <a href="{{ link.title | link_to: link.url }}">{{ link.title }}</a>
                        {% if link.links.size > 0 %}<ul>
                            {% for child_link in link.links %}<li>{{ child_link.title | link_to: child_link.url }} </li>
                                {% if child_link.links.size > 0 %}<ul>
                                    {% for grandchild_link in child_link.links %}<li>{{ grandchild_link.title | link_to: grandchild_link.url }} </li>
                                    {% endfor %}</ul>
                                {% endif %}
                            {% endfor %}</ul>
                        {% endif %}</li>
                {%- endfor %}</ul></nav>


        <div class="header-icons">
          <ul>
            <li><a href="cart.html"><i class="zmdi zmdi-shopping-cart"></i></a></li>
            <li><a href="#" class="header-searchtrigger"><i class="zmdi zmdi-search"></i></a></li>
          </ul>
        </div>
        <div class="header-searchbox">
          <div class="header-searchinner">
            <form action="#" class="header-searchform">
              <input type="text" placeholder="Enter search keyword..">
            </form>
            <button class="search-close">
              <i class="zmdi zmdi-close"></i>
            </button>
          </div>
        </div>
      </div>
      <div class="header-mobilemenu clearfix">
        <div class="tm-mobilenav"></div>
      </div>
    </div>
  </div>
  <!--// Header Bottom Area -->
</div>

{% schema %}
  {
    "name": "Header-Navbar",
    "settings": [
      {
        "type": "image_picker",
        "id": "site-logo",
        "label": "Site Logo"
      },{
         "type": "link_list",
  "id": "menu",
  "label": "Choose Menu"
      }
    ]
  }
{% endschema %}